<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.dvb.electroniclibrary.Register">

    <TextView
        android:text="الإسم"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/T_name"
        android:backgroundTint="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:layout_x="320dp"
        android:layout_y="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/E_name"
        android:background="@android:color/background_light"
        android:layout_x="45dp"
        android:layout_y="35dp" />
    <TextView
        android:text="البريد الإلكتروني"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/T_email"
        android:textColor="@android:color/background_light"
        android:layout_x="270dp"
        android:layout_y="75dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/E_email"
        android:background="@android:color/background_light"
        android:layout_x="45dp"
        android:layout_y="75dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/E_pass"
        android:background="@android:color/background_light"
        android:layout_x="45dp"
        android:layout_y="115dp" />

    <TextView
        android:text="الرقم السري"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="115dp"
        tools:layout_editor_absoluteX="340dp"
        android:id="@+id/T_password"
        android:textColor="@android:color/background_light"
        android:layout_x="290dp"
        android:layout_y="115dp" />

    <TextView
        android:text="الكلية"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/T_collage"
        android:layout_x="320dp"
        android:layout_y="165dp" />

    <TextView
        android:text="القسم"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/T_section"
        android:textColor="@android:color/background_light"
        android:layout_x="320dp"
        android:layout_y="215dp" />

    <TextView
        android:text="الرقم الجامعي"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/T_id"
        android:textColor="@android:color/background_light"
        android:layout_x="280dp"
        android:layout_y="265dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text=""
        android:ems="10"
        android:id="@+id/E_Id"
        android:background="@android:color/background_light"
        android:layout_x="45dp"
        android:layout_y="260dp" />

    <TextView
        android:text="المستوى"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/T_level"
        android:textColor="@android:color/background_light"
        android:layout_x="305dp"
        android:layout_y="315dp" />

    <Spinner
        android:layout_width="215dp"
        android:layout_height="39dp"
        android:id="@+id/S_collage"
        android:layout_x="50dp"
        android:layout_y="165dp" />

    <Spinner
        android:layout_width="215dp"
        android:layout_height="48dp"
        android:id="@+id/S_Section"
        android:dropDownSelector="@android:color/background_light"
        android:popupBackground="@android:color/background_light"
        android:layout_x="50dp"
        android:layout_y="215dp" />

    <Spinner
        android:layout_width="215dp"
        android:layout_height="48dp"
        android:id="@+id/S_Level"
        android:dropDownSelector="@android:color/black"
        android:popupBackground="@android:color/background_light"
        android:layout_x="50dp"
        android:layout_y="300dp" />

    <Button
        android:text="حفظ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="342dp"
        tools:layout_editor_absoluteX="134dp"
        android:id="@+id/B_save"
        android:layout_x="161dp"
        android:layout_y="435dp" />


</AbsoluteLayout>
